<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5"
    tools:context=".SuccessActivity">

    <ImageView
        android:id="@+id/success_image"
        android:layout_width="310dp"
        android:layout_height="318dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"
        app:srcCompat="@drawable/ic_succesfull_logo" />

    <TextView
        android:id="@+id/txt_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Successful!!"
        android:textColor="#313131"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/success_image"
        app:layout_constraintStart_toStartOf="@+id/success_image"
        app:layout_constraintTop_toBottomOf="@+id/success_image"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="You have successfully changed password. Please use your new passwords when logging in"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="#313131"
        app:layout_constraintEnd_toEndOf="@+id/txt_success"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/txt_success"
        app:layout_constraintTop_toBottomOf="@+id/txt_success" />


</androidx.constraintlayout.widget.ConstraintLayout>